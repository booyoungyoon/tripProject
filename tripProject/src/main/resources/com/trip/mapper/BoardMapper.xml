<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trip.mapper.BoardMapper">

	<!-- 게시글리스트 보기 -->
	<select id="getList" resultType="com.trip.domain.BoardVO">
		select * from board where board_num>0 order by board_num desc
	</select>
	
	<!-- 게시글 상세보기 -->
	<select id="get" resultType="com.trip.domain.BoardVO">
		select * from board where board_num = #{boardNum}
	</select>
	
	<!-- 게시글 삭제 -->
	<delete id="delete">
		delete from board where board_num = #{boardNum}
	</delete>
</mapper>